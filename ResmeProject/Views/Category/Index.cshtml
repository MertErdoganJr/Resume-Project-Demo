@using ResmeProject.Models
@model List<TblCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    
}

<h2>Kategori Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Mesaj Detayları</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CAtegoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Category/GetMessageBySubject/@item.CategoryID" class="btn btn-outline-success">Mesaj Detayları</a></td>
        </tr>
    }
</table>
<a href="/Category/AddCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>