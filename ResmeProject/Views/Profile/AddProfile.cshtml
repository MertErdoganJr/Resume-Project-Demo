@model ResmeProject.Models.TblProfile


@{
    ViewBag.Title = "AddProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Profil Ekleme Sayfası</h2>

<form method="post">
    <label>Profil Adı</label>
    @Html.TextBoxFor(x => x.ProfileTitle, new { @class = "form-control" })
    <br />
    <label>Profil Açıklaması</label>
    @Html.TextBoxFor(x => x.ProfileDescription, new { @class = "form-control" })
    <br />
    <label>İsim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    <label>Şehir</label>
    @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label>Linkedin Hesabı</label>
    @Html.TextBoxFor(x => x.SocialMedia1, new { @class = "form-control" })
    <br />
    <label>GitHub Hesabı</label>
    @Html.TextBoxFor(x => x.SocialMedia2, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Profili Kaydet</button>
</form>
